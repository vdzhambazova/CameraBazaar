@model CameraBazaar.Models.ViewModels.ProfilePageViewModel
@{
    ViewBag.Title = "My Profile";
}

<h2>@Html.DisplayFor(vm => vm.Username)</h2>
@Html.ActionLink("Edit Profile", "EditProfile", "Users", null, new {@class = "btn btn-lg btn-primary"})

@Html.DisplayNameFor(vm => vm.Email):
@Html.DisplayFor(vm => vm.Email)
<br />
@Html.DisplayNameFor(vm => vm.Phone):
@Html.DisplayFor(vm => vm.Phone)
<br />
Cameras:
@Html.DisplayFor(vm => vm.InStockCameras) in stock /
@Html.DisplayFor(vm => vm.OutOfStockCameras) out of stock
<br />

<h2>Cameras:</h2>

@if (Model.Cameras.Any())
{
    foreach (var cvm in Model.Cameras)
    {
        <div style="border: 2px solid ,black">
            <img src="@cvm.ImageUrl" alt="" width="200" height="200" />
            @Html.DisplayFor(cam => cvm.Make)
            @Html.DisplayFor(cam => cvm.Model)
            $@Html.DisplayFor(cam => cvm.Price)
            <br />
            <br />
            @Html.ActionLink("Details", "Details", "Cameras", new { @id = cvm.Id }, new { @class = "btn btn-lg btn-primary" })
            @Html.ActionLink("Edit", "Edit", "Cameras", new { @id = cvm.Id }, new { @class = "btn btn-lg btn-primary" })
            @Html.ActionLink("Delete", "Delete", "Cameras" ,new { @id = cvm.Id }, new { @class = "btn btn-lg btn-primary" })

            if(@cvm.Quantity > 0){
            <span class="text-danger"> Out of stock</span>
            }
            else {
            <span class="text-success">In stocck</span>
            }
        </div>
    }
}

